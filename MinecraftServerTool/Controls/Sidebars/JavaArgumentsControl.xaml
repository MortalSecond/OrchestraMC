<UserControl x:Class="MinecraftServerTool.Controls.JavaArgumentsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinecraftServerTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="180"
             Background="Gray">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Allocate RAM (GB)" FontWeight="Bold" Margin="0,0,0,5"/>

            <!-- Slider and Textbox -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Slider Minimum="1" Maximum="16" Width="150"
                    Value="{Binding AllocatedRam, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Width="50" Margin="10,0,0,0"
                     Text="{Binding AllocatedRam, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Save button -->
            <Button Content="Save Arguments"
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
