<UserControl x:Class="MinecraftServerTool.Controls.TooltipButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinecraftServerTool.Controls"
             mc:Ignorable="d" 
             Height="20" Width="20">
    <Grid>
        <Button Name="PART_Button"
                Content="?" 
                Height="20" 
                Width="20" 
                FontWeight="Bold"
                Cursor="Help">
            <Button.ToolTip>
                <TextBlock 
                    x:Name="PART_TooltipText"
                    TextWrapping="Wrap" 
                    Width="200"/>
            </Button.ToolTip>
        </Button>
    </Grid>
</UserControl>
